{
  "name": "quickjs-emscripten-repo",
  "private": true,
  "version": "0.31.0",
  "sideEffects": false,
  "license": "MIT",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/justjake/quickjs-emscripten"
  },
  "scripts": {
    "prepack": "npm run build && npm run check:package",
    "tarball": "npm run check:packages && rm -rf $PWD/build/tar && mkdir -p $PWD/build/tar && npm run for-each-package-cmd pack --out $PWD/build/tar/%s.tgz",
    "prepare": "npm run check",
    "clean": "git clean -dfx ./build && npm run for-each-package clean",
    "prettier": "prettier --write .",
    "vendor:quickjs:subtree": "git subtree $ACTION --prefix=vendor/quickjs --squash git@github.com:bellard/quickjs.git master",
    "vendor:quickjs:pull": "ACTION=pull npm run vendor:quickjs:subtree && npm run vendor:quickjs:patch",
    "vendor:quickjs:add": "ACTION=add npm run vendor:quickjs:subtree",
    "vendor:quickjs:patch": "git apply vendor/quickjs-patches/*",
    "vendor:ng:subtree": "git subtree $ACTION --prefix=vendor/quickjs-ng --squash git@github.com:quickjs-ng/quickjs.git master",
    "vendor:ng:pull": "ACTION=pull npm run vendor:ng:subtree",
    "vendor:ng:add": "ACTION=add npm run vendor:ng:subtree",
    "vendor:update": "npm run vendor:quickjs:pull && npm run vendor:ng:pull",
    "smoketest-node": "npm run tarball && ./scripts/smoketest-node-minimal.ts && ./scripts/smoketest-node.ts",
    "smoketest-cra": "npm run tarball && ./scripts/smoketest-create-react-app.ts",
    "smoketest-vite": "npm run tarball && ./scripts/smoketest-vite.ts",
    "check": "npm run build && npm run check:packages && npm run check:format && npm run check:types && npm run test && npm run lint",
    "test": "npm run for-each-package test",
    "test:fast": "TEST_FAST=true TEST_NO_ASYNC=true npm run test",
    "test:slow": "TEST_LEAK=1 npm run test",
    "check:types": "npm run for-each-package tsc",
    "check:format": "prettier --check .",
    "check:packages": "./scripts/check-packages-built.ts",
    "check:smoketest": "npm run tarball && ./scripts/smoketest-node-minimal.ts && ./scripts/smoketest-node.ts && ./scripts/smoketest-create-react-app.ts && ./scripts/smoketest-vite.ts",
    "lint": "npx eslint .",
    "fix": "npm run lint --fix ; npm run prettier > /dev/null",
    "build": "npm run build:codegen && npm run build:packages && npm run doc",
    "build:codegen": "cp -v README.md packages/quickjs-emscripten && ./scripts/prepareVariants.ts && npm run workspace @jitl/tsconfig build",
    "build:packages": "npm run for-each-package build",
    "doc": "typedoc",
    "doc:serve": "cd doc && npx hads",
    "all:publish:stable": "npm run run check:packages && npm run for-each-publishable-package npm publish --access public",
    "all:publish:next": "npm run run check:packages && npm run for-each-publishable-package npm publish --access public --tag next",
    "all:version": "./scripts/set-version.ts",
    "for-each-package-cmd": "npm run workspaces foreach --from 'packages/*' --topological-dev -Rpti",
    "for-each-publishable-package": "npm run for-each-package-cmd --exclude 'packages/internal-*'",
    "for-each-package": "npm run for-each-package-cmd run"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/emscripten": "^1.41.5",
    "@types/eslint": "^9.6.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "fs-extra": "^11.3.3",
    "glob": "^13.0.0",
    "hads": "^3.0.3",
    "node-fetch-commonjs": "^3.3.2",
    "prettier": "^3.8.0",
    "source-map-support": "^0.5.21",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typedoc": "^0.28.16",
    "typedoc-plugin-inline-sources": "^1.3.0",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^6.0.4",
    "vitest": "^4.0.17"
  }
}

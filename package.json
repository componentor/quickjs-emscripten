{
  "name": "@componentor/quickjs-emscripten",
  "private": true,
  "version": "0.31.35",
  "sideEffects": false,
  "license": "MIT",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/componentor/quickjs-emscripten"
  },
  "scripts": {
    "prepack": "pnpm run build && pnpm run check:packages",
    "tarball": "pnpm run check:packages && rm -rf $PWD/build/tar && mkdir -p $PWD/build/tar && pnpm -r --filter './packages/*' exec pnpm pack --pack-destination $PWD/build/tar",
    "prepare": "pnpm run check",
    "clean": "git clean -dfx ./build && pnpm -r --filter './packages/*' run clean",
    "prettier": "prettier --write .",
    "vendor:quickjs:subtree": "git subtree $ACTION --prefix=vendor/quickjs --squash git@github.com:bellard/quickjs.git master",
    "vendor:quickjs:pull": "ACTION=pull pnpm run vendor:quickjs:subtree && pnpm run vendor:quickjs:patch",
    "vendor:quickjs:add": "ACTION=add pnpm run vendor:quickjs:subtree",
    "vendor:quickjs:patch": "git apply vendor/quickjs-patches/*",
    "vendor:ng:subtree": "git subtree $ACTION --prefix=vendor/quickjs-ng --squash git@github.com:quickjs-ng/quickjs.git master",
    "vendor:ng:pull": "ACTION=pull pnpm run vendor:ng:subtree",
    "vendor:ng:add": "ACTION=add pnpm run vendor:ng:subtree",
    "vendor:update": "pnpm run vendor:quickjs:pull && pnpm run vendor:ng:pull",
    "smoketest-node": "pnpm run tarball && ./scripts/smoketest-node-minimal.ts && ./scripts/smoketest-node.ts",
    "smoketest-cra": "pnpm run tarball && ./scripts/smoketest-create-react-app.ts",
    "smoketest-vite": "pnpm run tarball && ./scripts/smoketest-vite.ts",
    "check": "pnpm run build && pnpm run check:packages && pnpm run check:format && pnpm run check:types && pnpm run test && pnpm run lint",
    "test": "pnpm -r --filter './packages/*' run test",
    "test:fast": "TEST_FAST=true TEST_NO_ASYNC=true pnpm run test",
    "test:slow": "TEST_LEAK=1 pnpm run test",
    "check:types": "pnpm -r --filter './packages/*' run tsc",
    "check:format": "prettier --check .",
    "check:packages": "./scripts/check-packages-built.ts",
    "check:smoketest": "pnpm run tarball && ./scripts/smoketest-node-minimal.ts && ./scripts/smoketest-node.ts && ./scripts/smoketest-create-react-app.ts && ./scripts/smoketest-vite.ts",
    "lint": "npx eslint .",
    "fix": "pnpm run lint --fix ; pnpm run prettier > /dev/null",
    "build": "pnpm run build:codegen && pnpm run build:packages && pnpm run doc",
    "build:codegen": "cp -v README.md packages/quickjs-emscripten && ./scripts/prepareVariants.ts && pnpm --filter @jitl/tsconfig run build",
    "build:packages": "pnpm -r --filter './packages/*' run build",
    "doc": "typedoc",
    "doc:serve": "cd doc && npx hads",
    "all:publish:stable": "pnpm run check:packages && pnpm -r --filter './packages/*' --filter '!./packages/internal-*' publish --access public",
    "all:publish:next": "pnpm run check:packages && pnpm -r --filter './packages/*' --filter '!./packages/internal-*' publish --access public --tag next",
    "all:version": "./scripts/set-version.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@jitl/tsconfig": "workspace:*",
    "@types/emscripten": "^1.41.5",
    "@types/eslint": "^9.6.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^25.0.9",
    "eslint": "^9.28.0",
    "eslint-plugin-import-x": "^4.10.4",
    "typescript-eslint": "^8.33.0",
    "globals": "^16.2.0",
    "fs-extra": "^11.3.3",
    "glob": "^13.0.0",
    "hads": "^3.0.3",
    "node-fetch-commonjs": "^3.3.2",
    "prettier": "^3.8.0",
    "source-map-support": "^0.5.21",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typedoc": "^0.28.16",
    "typedoc-plugin-inline-sources": "^1.3.0",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^6.0.4",
    "vitest": "^4.0.17"
  }
}
